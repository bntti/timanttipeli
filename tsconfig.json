{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "lib": ["ES2023"],
        "module": "Node16",
        "moduleResolution": "Node16",
        "target": "ES2022",

        "types": ["@types/node"],
        "noEmit": true,
        "allowJs": true,
        "allowImportingTsExtensions": true
    },
    "include": ["typings", "eslint.config.mjs", "prettier.config.mjs"]
}
