{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,
        "jsx": "react-jsx",

        /* Own configuration on top of vite generated tsconfig */
        "baseUrl": ".",
        "paths": { "@/common/*": ["../common/*"] }
    },
    "include": ["src"]
}
